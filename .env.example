# VetrAI Platform Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# General Configuration
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production
API_VERSION=v1

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://vetrai:vetrai_password@localhost:5432/vetrai_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# ============================================
# MinIO/S3 Configuration
# ============================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=vetrai_minio_access
MINIO_SECRET_KEY=vetrai_minio_secret
MINIO_SECURE=false
MINIO_BUCKET_NAME=vetrai-storage

# ============================================
# Authentication Configuration
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@vetrai.io
SMTP_FROM_NAME=VetrAI Platform
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Subscription Plans
STRIPE_PLAN_FREE_PRICE_ID=price_free
STRIPE_PLAN_PRO_PRICE_ID=price_pro
STRIPE_PLAN_ENTERPRISE_PRICE_ID=price_enterprise

# ============================================
# Razorpay Configuration (Optional)
# ============================================
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# ============================================
# SMS Configuration (Optional)
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ============================================
# API Key Configuration
# ============================================
API_KEY_PREFIX=vetrai_
API_KEY_LENGTH=32
API_KEY_EXPIRY_DAYS=365

# ============================================
# Worker Configuration
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600
CELERY_WORKER_CONCURRENCY=4

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3002

# ============================================
# Service Ports
# ============================================
AUTH_SERVICE_PORT=8001
TENANCY_SERVICE_PORT=8002
KEYS_SERVICE_PORT=8003
BILLING_SERVICE_PORT=8004
SUPPORT_SERVICE_PORT=8005
THEMES_SERVICE_PORT=8006
NOTIFICATIONS_SERVICE_PORT=8007
WORKERS_SERVICE_PORT=8008

# ============================================
# Frontend Configuration
# ============================================
STUDIO_PORT=3000
ADMIN_PORT=3001
PUBLIC_PORT=3003

# ============================================
# Security Configuration
# ============================================
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# ============================================
# Feature Flags
# ============================================
FEATURE_STRIPE_ENABLED=true
FEATURE_RAZORPAY_ENABLED=false
FEATURE_SMS_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AUDIT_LOGGING_ENABLED=true

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=vetrai-backups

# ============================================
# LangFlow Configuration
# ============================================
LANGFLOW_AUTO_LOGIN=false
LANGFLOW_DATABASE_URL=${DATABASE_URL}
LANGFLOW_CONFIG_DIR=/app/config
LANGFLOW_FRONTEND_PATH=/app/frontend/build

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL=admin@vetrai.io
ADMIN_PASSWORD=change-this-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
